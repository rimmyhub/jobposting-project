<!-- Modal -->
<div
  class="modal fade"
  id="education"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">학력 수정</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body text-start">
        <!-- 학교명 -->
        <div class="modal-body">
          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">학교명</label>
            <div class="col-sm-9">
              <input class="form-control" />
            </div>
          </div>
          <!-- 학교명 -->
          <!-- 전공 -->
          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">전공</label>
            <div class="col-sm-9">
              <input class="form-control" />
            </div>
          </div>
          <!-- 전공 -->
          <!-- 입학년도 -->
          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">입학년도</label>
            <div class="col-sm-9">
              <input class="form-control" />
            </div>
          </div>
          <!-- 입학년도 -->
          <!-- 졸업년도 -->
          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">졸업년도</label>
            <div class="col-sm-9">
              <input class="form-control" />
            </div>
          </div>
          <!-- 졸업년도 -->
          <!-- 퇴사날짜 -->
          <div class="mb-3 row">
            <label class="col-sm-3 col-form-label">퇴사날짜</label>
            <div class="col-sm-9">
              <input class="form-control" />
            </div>
          </div>
          <!-- 퇴사날짜 -->
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary">삭제</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          취소
        </button>
        <button type="button" class="btn btn-primary">저장</button>
      </div>
    </div>
  </div>
</div>
