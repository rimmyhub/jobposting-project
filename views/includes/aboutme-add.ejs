<!-- Modal -->
<div
  class="modal fade"
  id="aboutme-add"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">자기소개서</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body text-start">
        <!-- 제목 -->
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">제목</label>
          <input
            type="email"
            class="form-control"
            id="addExampleFormControlInput1"
          />
        </div>
        <!-- 제목 -->
        <!-- 내용 -->
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label"
            >내용</label
          >
          <textarea
            class="form-control"
            id="addExampleFormControlTextarea1"
            rows="15"
          ></textarea>
        </div>
        <!-- 내용 -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          취소
        </button>
        <button type="button" class="btn btn-primary" id="addAboutMeBtn">
          저장
        </button>
      </div>
    </div>
  </div>
</div>
<script src="/js/chatgpt.js" defer></script>
