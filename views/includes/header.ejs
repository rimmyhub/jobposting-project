<body>
  <nav>
    <div id="notification-interview" class="notification-interview">
      <h5 id="notification-title"></h5>
      <div class="button-box">
        <button id="accept-interview" class="accept-interview">응하기</button>
        <button id="refuse-interview" class="refuse-interview">거절하기</button>
      </div>
    </div>
    <div id="interview-container" class="interview-container">
      <header class="interview-header">
        <i id="close-interview" class="fa-solid fa-x close-interview"></i>
      </header>
      <div class="video-container">
        <div class="peer-video-box">
          <video
            id="peer-video"
            height="559"
            class="peer-video"
            src=""
            autoplay
          ></video>
        </div>
        <div class="my-video-box">
          <div>
            <select name="" id="video-select" class="video-select"></select>
            <div class="option-box">
              <div class="btns">
                <button id="mute-on-off">Mute off</button>
                <button id="camera-on-off">Camera off</button>
              </div>
            </div>
          </div>
          <video
            id="my-video"
            width="320"
            height="240"
            class="my-video"
          ></video>
        </div>
      </div>
    </div>
    <div>
      <div class="container-header">
        <div>
          <a href="/">
            <img class="header-logo" src="/img/winner.png" alt="" srcset="" />
          </a>
        </div>
        <% if(isLogin === 1) { %>
        <ul class="header-nav-list">
          <li>
            <i
              id="my-apply-list"
              class="fa-solid fa-list-check header-icon"
            ></i>
          </li>
          <li id="message-icon" class="message-icon">
            <i class="fa-regular fa-message header-icon"></i>
            <i
              id="exclamation-icon"
              class="fa-solid fa-exclamation exclamation-icon"
            ></i>
            <!-- 메세지 리스트가 있는 박스 -->
            <div id="message-box" class="message-box">
              <div class="message-box-title">
                <h5>메세지 내역</h5>
                <i
                  id="close-message"
                  class="fa-solid fa-xmark close-message"
                ></i>
              </div>
              <div id="message-list" class="message-list"></div>
            </div>
            <div id="chat-container" class="chat-container">
              <div id="chat-box-title" class="chat-box-title"></div>
              <div id="chatting-container" class="chatting-container">
                <ul id="chatting-list" class="chatting-list"></ul>
              </div>
              <div class="chat-input">
                <span>
                  <input
                    id="chat-content"
                    type="text"
                    onkeyPress="if(window.event.keyCode==13){sendMessage()}"
                  />
                  <button id="send-btn" class="send-button">전송</button>
                </span>
              </div>
            </div>
          </li>
          <li>
            <i
              id="logout"
              class="fa-solid fa-arrow-right-from-bracket logout header-icon"
            ></i>
          </li>
          <li id="profile">
            <img
              id="profile-image"
              src="/img/userImg.jpg"
              class="rounded-circle border border-secondary"
              alt="..."
            />
          </li>
        </ul>
        <% } else if(isLogin === 0) { %>
        <ul class="login-nav-list">
          <li>
            <a href="/signin/user">
              <i
                class="fa-solid fa-arrow-right-to-bracket signin-icon header-icon"
              ></i>
            </a>
          </li>
          <li>
            <a href="/signup/user"
              ><i class="fa-solid fa-user-plus signup-icon header-icon"></i
            ></a>
          </li>
        </ul>
        <% }%>
      </div>
    </div>
  </nav>

  <script src="/js/header.js" defer></script>
  <script src="/js/interview.js" defer></script>
  <script
    src="https://cdn.socket.io/4.4.0/socket.io.min.js"
    integrity="sha384-1fOn6VtTq3PWwfsOrk45LnYcGosJwzMHv+Xh/Jx5303FVOXzEnw0EpLv30mtjmlj"
    crossorigin="anonymous"
  ></script>
</body>
<link rel="stylesheet" href="/css/header.css" />
<link rel="stylesheet" href="/css/interview.css" />
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
/>
