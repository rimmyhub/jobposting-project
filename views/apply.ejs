<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/container.css" />
    <link rel="stylesheet" href="/css/apply.css" />
    <script src="/js/apply.js" defer></script>
  </head>
  <body>
    <%- include('includes/header', {isLogin: isLogin}) %>
    <!-- 회사 정보 영역 -->
    <div class="container" style="margin-top: 20px">
      <div class="row">
        <div class="col-2">
          <% if (type === "user") { %>
          <p class="text-start fs-5 fw-semibold" style="margin-top: 30px">
            내가 지원한 공고
          </p>
          <% }else if (type === 'company') { %>
          <p class="text-start fs-5 fw-semibold" style="margin-top: 30px">
            내가 작성한 공고
          </p>
          <% } %>
        </div>
        <div class="col-10">
          <div class="row">
            <% if (type === 'user') { %>
            <div class="apply-list">
              <div class="apply-card">
                <h4>cloud support associate</h4>
                <h6>항공우주/기계,전기전자,생산기술</h6>
                <h6>마감일 : 2023-01-03</h6>
              </div>
              <% }else if (type === 'company'){ %>
              <div class="apply-list">
                <div class="apply-card">
                  <h4>cloud support associate</h4>
                  <h6>항공우주/기계,전기전자,생산기술</h6>
                  <h6>마감일 : 2023-01-03</h6>
                </div>
                <% } %>
                <div>
                  <% if (type === 'user') { %>
                  <button
                    type="button"
                    class="btn btn-outline-primary"
                    id="apply-btn"
                  >
                    지원 취소
                  </button>
                  <% }else if (type === 'company'){ %>
                  <button
                    type="button"
                    class="btn btn-outline-primary"
                    id="apply-btn"
                  >
                    공고 수정
                  </button>
                  <% } %>
                </div>
                <hr />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="p-4"></div>
    <%- include('includes/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
