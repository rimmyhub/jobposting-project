<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/container.css" />
    <link rel="stylesheet" href="/css/signin.css" />
    <title>WINNER</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <!-- web Font -->
    <!--link rel="stylesheet" href="복사한 cdn 라이브러리 웹 경로" /-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    />
    <!-- ejs에서는 public아래의 경로를 써준과 동시에 defer을 붙여라 -->
    <script src="/js/signin.js" defer></script>
  </head>
  <body>
    <div class="main-container">
      <%- include('includes/header', {isLogin: 0, type: "user"}) %>
      <div class="signin-container">
        <div class="box-shadow">
          <div class="signin-box">
            <% if (type === "user") { %>
            <h1>사용자 로그인</h1>
            <% } else if (type === 'company') { %>
            <h1>회사 로그인</h1>
            <% } %>

            <div id="email" class="email-input-box">
              <i class="fa-regular fa-user icon"></i>
              <input id="input-email" type="text" />
            </div>
            <div class="email-input-box password-box">
              <i class="fa-solid fa-lock icon"></i>
              <input id="input-password" type="text" />
            </div>
            <div class="email-input-box">
              <input
                id="signin"
                class="signin-btn"
                value="로그인"
                type="button"
              />
            </div>
            <div class="signup-box">
              <div class="signup-btn">
                <% if (type === "user") { %>
                <h4>
                  <a href="/signin/company"> 회사 로그인 </a>
                </h4>

                <% } else if (type === 'company') {%>
                <h4>
                  <a href="/signin/user"> 유저 로그인 </a>
                </h4>

                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
