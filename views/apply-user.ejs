<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WINNER</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/container.css" />
    <link rel="stylesheet" href="/css/apply.css" />
    <!-- <script src="/js/apply-user.js" defer></script> -->
    <script src="/js/apply-user.js" defer></script>
    <style>
      .apply-list {
        margin-left: 20px;
      }

      .profile-box {
        display: block;
        position: relative;
        text-align: center;
      }

      .user-img {
        display: inline-block;
        vertical-align: middle;

        width: 130px;
        border: 0.5px solid gray;
        border-radius: 70%;
      }
    </style>
  </head>
  <body>
    <%- include('includes/header', {isLogin: isLogin}) %>

    <!-- 회사 정보 영역 -->
    <div class="container" style="margin-top: 20px">
      <!-- 브레드크롬 -->

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            apply / company / apply-user
          </li>
        </ol>
      </nav>

      <div class="container">
        <div class="col-2">
          <p class="text-start fs-5 fw-semibold" style="margin-top: 30px">
            지원자 확인
          </p>
        </div>

        <div class="container col-8" id="apply-user-list">
          <div class="row">
            <div class="col-4">
              <div class="profile-box">
                <img
                  src="/img/userImg.jpg"
                  id="image"
                  class="user-img"
                  alt=""
                  srcset=""
                  onerror="this.src='/img/userImg.jpg';"
                />
              </div>
            </div>
            <div class="col-8">
              <div class="row">
                <div class="apply-user-list">
                  <div class="apply-user-card">
                    <h4 class="user-name">홍길동</h4>
                    <h6 class="user-phone">010-1234-1234</h6>
                    <h6 class="user-email">teseuteugim768@gmail.com</h6>
                  </div>

                  <div>
                    <button
                      type="button"
                      class="btn btn-outline-primary resume-btn"
                      style="margin-right: 10px"
                    >
                      이력서 보기
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <hr />
        </div>
      </div>
    </div>
    <div class="p-4"></div>
    <%- include('includes/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
